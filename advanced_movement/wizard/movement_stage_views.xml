<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="movement_stage_form_views" model="ir.ui.view">
		<field name="name">movement.stage.form.views</field>
		<field name="model">movement.stage</field>
		<field name="arch" type="xml">
			<form string="Movemen Stage Form">
				<sheet>
					<div class="oe_title">
	            		<h5><label for="approval_role_id" string="Stage Title"/></h5>
	            		<field name="approval_role_id" placeholder="Stage Title" required="1" class="o_user_style"/>
	            	</div>
					<group>
						<group>
							<field name="approval_type"/>
							<field name="approvers"/>
						</group>
						<group>
							<field name="sequence"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="movement_stage_tree_views" model="ir.ui.view">
		<field name="name">movement.stage.form.views</field>
		<field name="model">movement.stage</field>
		<field name="arch" type="xml">
			<tree string="Movemen Stage Form">
				<field name="approval_role_id"/>
				<field name="approval_type"/>
				<field name="approvers"/>
				<button name="unlink" type="object"/>
			</tree>
		</field>
	</record>
	
	<record id="action_movement_stage" model="ir.actions.act_window">
            <field name="name">Add New Satge</field>
            <field name="res_model">movement.stage</field>
            <field name="view_mode">tree,form</field>
        </record>
</odoo>