<odoo>
    <data>
        <record id="s_exit_interview_record_view_form" model="ir.ui.view">
            <field name="name">s_exit_interview_record_view_form</field>
            <field name="model">s.exit.interview.record</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group class="Exit_Interview">
                            <group>
                                <field name="create_uid"/>
                                <field name="s_employee_id"/>
                                <field name="s_employee_name"/>
                                <field name="s_company"/>
                                <field name="s_exit_type"/>
                                <field name="s_questionnaire"/>
                                <field name="s_amended_from"/>
                            </group>
                            <group>
                                <field name="survey_type"/>
                                <field name="s_start_date_in_the_organization"/>
                                <field name="s_start_date_in_the_position"/>
                                <field name="s_total_length_of_service"/>
                                <field name="s_other_positions_held"/>
                                <field name="s_primary_reason_in_leaving_the_organization"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="s_exit_interview_record_view_tree" model="ir.ui.view">
            <field name="name">s_exit_interview_record_view_tree</field>
            <field name="model">s.exit.interview.record</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="survey_type" string="Movement Type"/>
                    <field name="create_uid"/>
                    <field name="s_employee_id"/>
                    <field name="s_employee_name"/>
                    <field name="create_date" string="Posting Date"/>
                </tree>
            </field>
        </record>

        <record id="s_exit_interview_record_action" model="ir.actions.act_window">
            <field name="name">Exit Interview Record</field>
            <field name="res_model">s.exit.interview.record</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>