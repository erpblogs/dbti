<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="approval_role_form_views" model="ir.ui.view">
		<field name="name">approval.role.form.views</field>
		<field name="model">approval.role</field>
		<field name="arch" type="xml">
			<form string="Approval role Form">
				<sheet>
					<group>
						<group>
							<field name="position_role"/>
							<field name="user_ids" widget="many2many_tags" />
							<field name="company_id"/>
						</group>
					</group>
				</sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids"  widget="mail_followers"/>
					<field name="message_ids" widget="mail_thread"/>
                </div>
			</form>
		</field>
	</record>
	
	<record id="approval_role_tree_views" model="ir.ui.view">
		<field name="name">approval.role.form.views</field>
		<field name="model">approval.role</field>
		<field name="arch" type="xml">
			<tree string="Approval role Tree">
				<field name="position_role"/>
				<field name="user_ids" widget="many2many_tags"/>
				<field name="company_id"/>
			</tree>
		</field>
	</record>
	
	<record id="action_approval_role" model="ir.actions.act_window">
		<field name="name">Approval role</field>
		<field name="res_model">approval.role</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="approval_role_tree_views"/>
	</record>
</odoo>