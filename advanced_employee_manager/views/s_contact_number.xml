<odoo>
    <data>
        <record id="s_contact_number_view_form" model="ir.ui.view">
            <field name="name">s_contact_number_view_form</field>
            <field name="model">s.contact.number</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="s_contact_number" string="Contact number"/>
                            <h1>
                                <field name="s_contact_number" placeholder="e.g. Odoo Inc." required="True"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>